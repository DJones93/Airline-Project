package com.Declan;

import java.text.NumberFormat;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        final int minPrice = 1_000;
        final int maxPrice = 5_000;
        int randomPrice = (int)Math.floor(Math.random()*(maxPrice-minPrice+1)+minPrice);

            System.out.print("Please Enter The Location You Wish to Visit: ");
            String location = scanner.next().toUpperCase();

            System.out.print("Please Enter The Seat You Wish to Sit in on Your Flight: ");
            String seatNumber = scanner.next().toUpperCase();

            System.out.print("Please Enter Your Departure Date: ");
            String dateDeparture = scanner.next();

            System.out.print("Please Enter Your Return Date: ");
            String dateReturn = scanner.next();

            System.out.print("Would you like to fly in Business or Economy class? ");
            String flightClass = scanner.next().toLowerCase();
            if (flightClass.equals("business")){
                int businessPrice = randomPrice * 3;
                NumberFormat formatter = NumberFormat.getCurrencyInstance();
                String priceCurrency = formatter.format(businessPrice);
                System.out.println("Your Holiday to " + location + " From:" + dateDeparture + " Until:" + dateReturn + " Will Cost " + priceCurrency + ", Your Seat for this Flight is " + seatNumber + " in the Business Class.");
            }
            else if (flightClass.equals("economy")) {
                int economyPrice = randomPrice / 5;
                NumberFormat formatter = NumberFormat.getCurrencyInstance();
                String priceCurrency = formatter.format(economyPrice);
                System.out.println("Your Holiday to " + location + " From:" + dateDeparture + " Until:" + dateReturn + " Will Cost " + priceCurrency + ", Your Seat for this Flight is " + seatNumber + " in the Economy Class.");
            }
    }
}
